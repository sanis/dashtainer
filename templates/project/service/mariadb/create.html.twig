{% extends '@Dashtainer/project/service/create.html.twig' %}

{% block serviceContent %}
<form class="card" action="{{ path('project.service.create.post', {
    'projectId': project.id,
    'serviceTypeSlug': serviceType.slug,
}) }}" method="post" data-ajax>
    <div class="card-body">
        <div class="row">
            <div class="form-group col">
                <label class="form-label" for="name">Service Name</label>
                <input type="text" class="form-control" maxlength="64"
                       id="name" name="name" placeholder=""
                       value="{{ serviceName }}" required data-mask-type="dns"
                       data-update-text="service-name-tag,datastore-local-span"
                       data-error-container="name" />
                <div class="invalid-feedback" data-error-container-name="name"></div>
            </div>
        </div>

        <div class="alert alert-icon alert-info mb-6" role="alert">
            <i class="fe fe-bell mr-2" aria-hidden="true"></i>
            This service will be available <strong>privately</strong> at
            <span class="badge badge-primary text-lg">
                <span class="tag-addon-left"><i class="fa fa-lock"></i></span>
                <span id="service-name-tag">{{ serviceName }}</span>:3306</span>
        </div>

        <hr class="my-6" />

        {% include '@Dashtainer/project/service/snippets/networks_create.html.twig' %}

        <div class="row">
            <div class="col-6">
                <label class="form-label" for="port">Bind Port</label>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input"
                                       value="1" id="port_confirm" name="port_confirm" />
                                <label class="custom-control-label" for="port_confirm">Enable</label>
                            </div>
                        </div>
                    </div>
                    <input type="number" id="port" name="port" class="form-control"
                           min="3306" max="65535" value="{{ bindPort }}" data-update-text="port-tag"
                           data-error-container="port" />
                </div>

                <div class="invalid-feedback" data-error-container-name="port"></div>
            </div>

            <div class="col-12">
                <small class="text-muted">
                    Bind port on your localhost to this service's <code>3306</code> port.
                    <br />
                    Useful for connecting a GUI like Sequel Pro or MySQL Workbench via
                    <span class="badge badge-primary text-lg">
                        localhost:<span id="port-tag">{{ bindPort }}</span></span>.
                    <br />
                    This is disabled by default and should only be enabled in local dev environments.
                    <br />
                    To enable you must check the checkbox and enter a port.
                    <br />
                    The preferred method of accessing your database is to create an Adminer service.
                </small>
            </div>
        </div>

        <hr class="my-6" />

        <h4 class="mb-3">Data Storage</h4>

        <div class="row">
            <div class="col">
                <div class="selectgroup" role="tablist">
                    <label class="selectgroup-item">
                        <input type="radio" class="selectgroup-input"
                               id="datastore-docker" name="datastore"
                               value="docker" checked role="tab"
                               data-toggle="radio-tab" data-target="#datastore-docker-tab"
                               data-error-container="datastore" />
                        <span class="selectgroup-button selectgroup-button-icon px-7 py-3">
                            <i class="fe fe-anchor"></i> Docker Volume</span>
                    </label>

                    <label class="selectgroup-item">
                        <input type="radio" class="selectgroup-input"
                               id="datastore-local" name="datastore"
                               value="local" role="tab"
                               data-toggle="radio-tab" data-target="#datastore-local-tab"
                               data-error-container="datastore" />
                        <span class="selectgroup-button selectgroup-button-icon px-7 py-3">
                            <i class="fe fe-hard-drive"></i> Local</span>
                    </label>
                </div>

                <div id="nav-datastore-content" class="tab-content">
                    <div id="datastore-docker-tab" role="tabpanel"
                         class="tab-pane show active">
                        <div class="row">
                            <div class="form-group col">
                                <small class="text-muted">
                                    Let Docker manage the storage of your database data.
                                </small>
                            </div>
                        </div>
                    </div>

                    <div id="datastore-local-tab" role="tabpanel"
                         class="tab-pane">
                        <div class="row">
                            <div class="form-group col">
                                <small class="text-muted">
                                    Create a data directory on the host system.
                                    The directory will be
                                    <code><span id="datastore-local-span">
                                            {{ serviceName }}</span>/datadir</code>.
                                </small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col">
                                <label>Init Directory</label>

                                <p>
                                    Any <code>.sh</code>, <code>.sql</code> and <code>.sql.gz</code>
                                    within the
                                    <code><span id="initdir">{{ serviceName }}</span>/init</code>
                                    directory will be executed or imported into the defined database.
                                    Files will be executed in alphabetical order.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="invalid-feedback p-3 mb-2 bg-danger text-white"
                     data-error-container-name="datastore"></div>
            </div>
        </div>

        <hr class="my-6" />

        <h4 class="mb-3">Database Credentials</h4>

        <div class="row">
            <div class="col">
                <div class="selectgroup" role="tablist">
                    <label class="selectgroup-item">
                        <input type="radio" class="selectgroup-input"
                               id="credential_store-secret" name="credential_store"
                               value="secret" checked role="tab"
                               data-toggle="radio-tab" data-target="#credentials-secret-tab"
                               data-error-container="credential_store" />
                        <span class="selectgroup-button selectgroup-button-icon px-7 py-3">
                            <i class="fe fe-anchor"></i> Docker Secrets</span>
                    </label>

                    <label class="selectgroup-item">
                        <input type="radio" class="selectgroup-input"
                               id="credential_store-plaintext" name="credential_store"
                               value="plaintext" role="tab"
                               data-toggle="radio-tab" data-target="#credentials-plaintext-tab"
                               data-error-container="credential_store" />
                        <span class="selectgroup-button selectgroup-button-icon px-7 py-3">
                            <i class="fe fe-file-text"></i> Plain Text</span>
                    </label>
                </div>

                <div id="nav-credentials-content" class="tab-content">
                    <div id="credentials-secret-tab" role="tabpanel"
                         class="tab-pane show active">
                        <div class="row form-group">
                            <div class="col">
                                <small class="text-muted">
                                    Credentials will be available as files within your container. Useful when
                                    other services need this data, like a PHP application needing to connect
                                    to a database.
                                </small>
                            </div>
                        </div>

                        <fieldset class="form-fieldset bg-transparent border-0">
                            <div class="row">
                                <div class="col-12 col-xl form-group">
                                    <label class="form-label"
                                           for="secret-mysql_root_password-name">Root Password Secret Name</label>
                                    <input type="text" class="form-control" maxlength="64"
                                           id="secret-mysql_root_password-name" name="secret[mysql_root_password][name]"
                                           placeholder="" value="" required
                                           data-update-text="secret-mysql_root_password-name-label"
                                           data-error-container="secret-mysql_root_password" />
                                    <small class="text-muted">
                                        Will be available to services at
                                        <code>/run/secrets/<span
                                                id="secret-mysql_root_password-name-label">db_root_password</span></code>
                                    </small>
                                </div>

                                <div class="col-12 col-xl form-group">
                                    <label class="form-label"
                                           for="secret-mysql_root_password">Root Password</label>
                                    <input type="text" class="form-control" maxlength="64"
                                           id="secret-mysql_root_password" name="secret[mysql_root_password][value]"
                                           placeholder="" value="" required
                                           data-error-container="secret-mysql_root_password" />
                                    <small class="text-muted">
                                        Password for the <code>root</code> user.
                                    </small>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="invalid-feedback"
                                         data-error-container-name="secret-mysql_root_password"></div>
                                </div>
                            </div>
                        </fieldset>

                        <fieldset class="form-fieldset">
                            <div class="row">
                                <div class="col-12 col-xl form-group">
                                    <label class="form-label"
                                           for="secret-mysql_database-name">Database Secret Name</label>
                                    <input type="text" class="form-control" maxlength="64"
                                           id="secret-mysql_database-name" name="secret[mysql_database][name]"
                                           placeholder="" value="" required
                                           data-update-text="secret-mysql_database-name-label"
                                           data-error-container="secret-mysql_database" />
                                    <small class="text-muted">
                                        Will be available to services at
                                        <code>/run/secrets/<span
                                                id="secret-mysql_database-name-label">mysql_database</span></code>
                                    </small>
                                </div>

                                <div class="col-12 col-xl form-group">
                                    <label class="form-label"
                                           for="secret-mysql_database-value">Database</label>
                                    <input type="text" class="form-control" maxlength="64"
                                           id="secret-mysql_database-value" name="secret[mysql_database][value]"
                                           placeholder="" value="" required
                                           data-error-container="secret-mysql_database" />
                                    <small class="text-muted">
                                        Database to create on init.
                                    </small>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="invalid-feedback"
                                         data-error-container-name="secret-mysql_database"></div>
                                </div>
                            </div>
                        </fieldset>

                        <fieldset class="form-fieldset bg-transparent border-0">
                            <div class="row">
                                <div class="col-12 col-xl form-group">
                                    <label class="form-label"
                                           for="secret-mysql_user-name">User Secret Name</label>
                                    <input type="text" class="form-control" maxlength="64"
                                           id="secret-mysql_user-name" name="secret[mysql_user][name]"
                                           placeholder="" value="" required
                                           data-update-text="secret-mysql_user-name-label"
                                           data-error-container="secret-mysql_user" />
                                    <small class="text-muted">
                                        Will be available to services at
                                        <code>/run/secrets/<span
                                                id="secret-mysql_user-name-label">mysql_user</span></code>
                                    </small>
                                </div>

                                <div class="col-12 col-xl form-group">
                                    <label class="form-label"
                                           for="secret-mysql_user-value">User</label>
                                    <input type="text" class="form-control" maxlength="64"
                                           id="secret-mysql_user-value" name="secret[mysql_user][value]"
                                           placeholder="" value="" required
                                           data-error-container="secret-mysql_user" />
                                    <small class="text-muted">
                                        Non-root user.
                                    </small>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="invalid-feedback"
                                         data-error-container-name="secret-mysql_user"></div>
                                </div>
                            </div>
                        </fieldset>

                        <fieldset class="form-fieldset">
                            <div class="row">
                                <div class="col-12 col-xl form-group">
                                    <label class="form-label"
                                           for="secret-mysql_password-name">User Password Secret Name</label>
                                    <input type="text" class="form-control" maxlength="64"
                                           id="secret-mysql_password-name" name="secret[mysql_password][name]"
                                           placeholder="" value="" required
                                           data-update-text="secret-mysql_password-name-label"
                                           data-error-container="secret-mysql_password" />
                                    <small class="text-muted">
                                        Will be available to services at
                                        <code>/run/secrets/<span
                                                id="secret-mysql_password-name-label">mysql_password</span></code>
                                    </small>
                                </div>

                                <div class="col-12 col-xl form-group">
                                    <label class="form-label"
                                           for="secret-mysql_password-value">User Password</label>
                                    <input type="text" class="form-control" maxlength="64"
                                           id="secret-mysql_password-value" name="secret[mysql_password][value]"
                                           placeholder="" value="" required
                                           data-error-container="secret-mysql_password" />
                                    <small class="text-muted">
                                        Password for user.
                                    </small>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="invalid-feedback"
                                         data-error-container-name="secret-mysql_password"></div>
                                </div>
                            </div>
                        </fieldset>
                    </div>

                    <div id="credentials-plaintext-tab" role="tabpanel"
                         class="tab-pane">
                        <div class="row form-group">
                            <div class="col">
                                <small class="text-muted">
                                    Credentials will not be injected into service containers. Any service
                                    other than this one will need to know the data some other way - most
                                    likely hardcoded into the application!
                                </small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 col-xl form-group">
                                <label class="form-label"
                                       for="mysql_root_password">Root Password</label>
                                <input type="text" class="form-control" maxlength="64"
                                       id="mysql_root_password" name="mysql_root_password" placeholder=""
                                       value="" required
                                       data-error-container="mysql_root_password" />
                                <div class="invalid-feedback"
                                     data-error-container-name="mysql_root_password"></div>
                                <small class="text-muted">
                                    Password for the <code>root</code> user.
                                </small>
                            </div>

                            <div class="col-12 col-xl form-group">
                                <label class="form-label"
                                       for="mysql_database">Database</label>
                                <input type="text" class="form-control" maxlength="64"
                                       id="mysql_database" name="mysql_database" placeholder=""
                                       value="" required
                                       data-error-container="mysql_database" />
                                <div class="invalid-feedback" data-error-container-name="mysql_database"></div>
                                <small class="text-muted">
                                    Database to create on init.
                                </small>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 col-xl form-group">
                                <label class="form-label"
                                       for="mysql_user">User</label>
                                <input type="text" class="form-control" maxlength="64"
                                       id="mysql_user" name="mysql_user" placeholder=""
                                       value="" required
                                       data-error-container="mysql_user" />
                                <div class="invalid-feedback"
                                     data-error-container-name="mysql_user"></div>
                                <small class="text-muted">
                                    Non-root user.
                                </small>
                            </div>

                            <div class="col-12 col-xl form-group">
                                <label class="form-label"
                                       for="mysql_password">User Password</label>
                                <input type="text" class="form-control" maxlength="64"
                                       id="mysql_password" name="mysql_password" placeholder=""
                                       value="" required
                                       data-error-container="mysql_password" />
                                <div class="invalid-feedback" data-error-container-name="mysql_password"></div>
                                <small class="text-muted">
                                    Password for User.
                                </small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="invalid-feedback p-3 mb-2 bg-danger text-white"
                     data-error-container-name="credential_store"></div>
            </div>
        </div>

        <hr class="my-6" />

        <h4 class="mb-3">Config Files</h4>
        {% set conf = serviceType.meta('conf') %}

        <div class="row">
            <div class="col">
                <ul class="nav nav-tabs mb-3" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link"
                           data-toggle="add-block"
                           aria-controls="#nav-file-content"
                           href="{{ path('project.service.block-add-file.get', {
                               'projectId': project.id,
                               'language': 'ini',
                           }) }}">
                            <i class="fe fe-plus"></i> Add</a>
                    </li>
                    {% for key, value in conf.data %}
                        <li class="nav-item {{ loop.first ? 'active' }}">
                            <a id="nav-file-{{ key }}-tab" class="nav-link {{ loop.first ? 'active' }}"
                               data-toggle="tab" role="tab"
                               href="#system_file-{{ key }}" aria-controls="system_file-{{ key }}"
                               aria-selected="{{ loop.first ? 'true' : 'false' }}">{{ key }}</a>
                        </li>
                    {% endfor %}
                </ul>

                <div id="nav-file-content" class="tab-content">
                    {% for key, value in conf.data %}
                        <div id="system_file-{{ key }}" role="tabpanel"
                             class="tab-pane fade {{ loop.first ? 'show active' }}">
                            <div class="row">
                                <div class="col">
                                    <pre class="language-ini" data-code-highlight><code
                                            id="system_file-{{ key }}-source"
                                            contenteditable autocorrect="off" autocapitalize="off"
                                            spellcheck="false">{{ value }}</code></pre>
                                    <input type="hidden" value="" name="system_file[{{ key }}]"
                                           data-error-container="system_file-error"
                                           data-get-value-source="system_file-{{ key }}-source" />
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="invalid-feedback p-3 mb-2 bg-danger text-white"
                     data-error-container-name="system_file-error"></div>

                <div class="invalid-feedback p-3 mb-2 bg-danger text-white"
                     data-error-container-name="user_file-error"></div>
            </div>
        </div>

        <hr class="my-6" />

        <input type="hidden" id="version" name="version" value="{{ version }}" />

        <button class="btn btn-primary btn-lg btn-block" type="submit">Create Service</button>
    </div>
</form>
{% endblock %}
